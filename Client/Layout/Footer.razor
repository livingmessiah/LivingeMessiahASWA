@using Page = Client.Enums.Nav
@using Client.Enums

<footer class="text-center bg-light text-muted w-100 mt-3">
	
	<div class="d-flex justify-content-center -2 border-bottom">

		@foreach (var item in NavSocialMedia.List.ToList())
		{
			<a href="@item.Href" class="me-4 text-reset" title="@item.Title" target="_blank">
				<i class="@item.Icon"></i>
			</a>
		}

		&nbsp;&nbsp; &nbsp;&nbsp;

		@foreach (var item in Nav.List.ToList()
			.Where(w => w.IsPartOfList(PageListType.Footer))
			.OrderBy(o => o.Sort))
		{
			<a href="@item.Index" class="me-4 text-reset" title="@item.Title">
				<i class="@item.Icon"></i>
			</a>
		}
	</div>
	
	<img src="/images/footer.jpg" class="img-fluid" />
</footer>


