@using Client.Layout.Navigation
@using Client.Enums
@inherits LayoutComponentBase

<div class="page">
	<header>
		<nav class="navbar bg-warning-subtle fixed-top">

			@* <MenuOffCanvas /> *@
			@* <NavMenu /> *@

			<div class="container-fluid">

				<div class="@MediaQuery.SmOrMdOrLgOrXl.DivClass">
					<HomeButton />
				</div>

				<SearchForm />
				<button title="Navigation menu" class="navbar-toggler px-0 text-white" @onclick="ToggleNavMenu">
					<span class="navbar-toggler-icon ms-0"></span>
				</button>
				<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
					<div class="offcanvas-body @NavMenuCssClass ">
						<AnchorButtons />
					</div>
				</div>

			</div>

		</nav>

	</header>

	<main>
		<article class="content mt-5 mb-2 px-1">
			<LoginModal />
			@Body
		</article>
	</main>
</div>
<Footer />

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>


@code {

	private bool collapseNavMenu = true;
	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}

	}
