@page "/confirm_donation.html"
@page "/confirm_donation"

<PageHeader PageEnum="Client.Enums.Nav.DonateReplyConfirm" />

<div id="content">
	<div class="post">
		<h2 class="title">Thank you for your support&nbsp;!</h2><br />
		<div class="entry">
			<p>
				We're confident that God will bless you for supporting our ministry.
				If you have any questions concerning your donation, please feel free to contact us at @((MarkupString)AnchorEmail).
			</p>
			<p>Again, we greatly appreciate your support of this ministry.</p>
			<br>
		</div>
	</div>
</div>
<!-- end #content -->


@code {
	protected readonly MarkupString AnchorEmail =
		new MarkupString($"<a href='mailto:{@Constants.DonationEmail}'>{@Constants.DonationEmail}</a>");
}
